<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<!-- Rule type definition -->
<xs:complexType name="ruleType">
	<xs:sequence>
		<xs:element name="ruleClass" type="xs:string" maxOccurs="1" minOccurs="1"/>
		<xs:element name="ruleNum" type="xs:integer" maxOccurs="1" minOccurs="1"/>
		<xs:element name="ruleFile" type="xs:string" maxOccurs="1" minOccurs="1"/>
	</xs:sequence>
</xs:complexType>

<!-- Dataset type definition -->
<xs:complexType name="datasetType">
	<xs:sequence>
		<xs:element name="datasetClass" type="xs:string" maxOccurs="1" minOccurs="1"/>
		<xs:element name="datasetFile" type="xs:string" maxOccurs="1" minOccurs="0"/>
	</xs:sequence>
</xs:complexType>

<xs:element name="evaluationConfig">
	<xs:complexType>
		<xs:sequence>
			<xs:element name="ruleConfig" type="ruleType" minOccurs="1" maxOccurs="unbounded"/>
			<xs:element name="datasetConfig" type="datasetType" minOccurs="1" maxOccurs="1"/>
		</xs:sequence>
	</xs:complexType>
</xs:element>

</xs:schema>